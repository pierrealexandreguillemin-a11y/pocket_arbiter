#!/bin/sh
# Cross-platform commit-msg hook wrapper
# Calls Python script for actual validation

# Find Python
if command -v python3 >/dev/null 2>&1; then
    PYTHON=python3
elif command -v python >/dev/null 2>&1; then
    PYTHON=python
else
    echo "ERROR: Python not found"
    exit 1
fi

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"

# Run Python hook with commit message file
exec "$PYTHON" "$SCRIPT_DIR/commit-msg.py" "$1"

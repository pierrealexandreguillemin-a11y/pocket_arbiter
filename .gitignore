# Arbitre Échecs RAG - .gitignore

# =============================================================================
# ANDROID
# =============================================================================

# Gradle
.gradle/
build/
!gradle/wrapper/gradle-wrapper.jar

# Android Studio
.idea/
*.iml
local.properties
.DS_Store

# Generated files
app/build/
app/release/

# Signing
*.jks
*.keystore

# Proguard
proguard/

# =============================================================================
# PYTHON
# =============================================================================

# Virtual environment
venv/
.venv/
env/
.env/

# Python
__pycache__/
*.py[cod]
*$py.class
*.so

# Distribution
dist/
build/
*.egg-info/

